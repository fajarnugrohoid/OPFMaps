<resources>
    <declare-styleable name="OPFMapAttrs">
        <attr name="opf_mapType" format="enum">
            <enum name="none" value="0"/>
            <enum name="normal" value="1"/>
            <enum name="satellite" value="2"/>
            <enum name="terrain" value="3"/>
            <enum name="hybrid" value="4"/>

        </attr>
        <attr name="opf_cameraBearing" format="float"/>
        <attr name="opf_cameraTargetLat" format="float"/>
        <attr name="opf_cameraTargetLng" format="float"/>
        <attr name="opf_cameraTilt" format="float"/>
        <attr name="opf_cameraZoom" format="float"/>

        <attr name="opf_liteMode" format="boolean"/>

        <attr name="opf_uiCompass" format="boolean"/>
        <attr name="opf_uiRotateGestures" format="boolean"/>
        <attr name="opf_uiScrollGestures" format="boolean"/>
        <attr name="opf_uiTiltGestures" format="boolean"/>
        <attr name="opf_uiZoomControls" format="boolean"/>
        <attr name="opf_uiZoomGestures" format="boolean"/>
        <attr name="opf_useViewLifecycle" format="boolean"/>
        <attr name="opf_zOrderOnTop" format="boolean"/>

        <attr name="opf_uiMapToolbar" format="boolean"/>

    </declare-styleable>
</resources>